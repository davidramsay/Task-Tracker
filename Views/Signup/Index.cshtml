<link rel="stylesheet" type="text/css" href="~/css/StyleSheet.css" />
<div class="login">
    <h1>Register for PLANR</h1>
    <form method="post" action="">
        <p>Enter your username or email:</p>
        <p><input type="text" name="login" value="" placeholder="Username or Email"></p>
        <p>Enter your password:</p>
        <p><input type="password" name="password" value="" placeholder="Enter a Password"></p>
        <p>Confirm password:</p>
        <p><input type="password" name="password" value="" placeholder="Confirm Password"></p>
        <p class="remember_me">
            <label>
                Already have an account? <a class=label asp-area="" asp-controller="Home" asp-action="Index">Log in here.</a>
            </label>
        </p>
        <p class="submit"><input type="submit" name="commit" value="Register"></p>
    </form>
</div>

<div class="login-help">
    <p style="color: #555555;">Forgot your password? <a href="#" style="color: #4475A0;">Click here to reset it</a>.</p>
</div>

