<link rel="stylesheet" type="text/css" href="~/css/StyleSheet.css" />
<div class="login">
    <h1>Login to PLANR</h1>
    <form method="post" action="">
        <p>Enter your username or email:</p>
        <p><input type="text" name="login" value="" placeholder="Username or Email"></p>
        <p>Enter your password:</p>
        <p><input type="password" name="password" value="" placeholder="Password"></p>

        <p class="remember_me">
            <label>
                <input type="checkbox" name="remember_me" id="remember_me">
                Remember me on this computer
            </label>
        </p>
        <p class="remember_me">
            <label>
                Don't have an account? <a asp-area="" asp-controller="Signup" asp-action="Index">Sign up here.</a>
            </label>
        </p>
        <p class="submit"><a class="submit" asp-controller="Dashboard" asp-action="Index">Login</a></p>
    </form>
</div>

<div class="login-help">
    <p style="color: #555555;">Forgot your password? <a href="#" style="color: #4475A0;">Click here to reset it</a>.</p>
</div>
